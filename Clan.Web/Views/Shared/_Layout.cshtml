<!DOCTYPE html>
<html lang="en-ca">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <title>GTA Overwatch Bros</title>
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/semantic.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/app.css" />
    @RenderSection("Stylesheets", required: false)
</head>
<body>

    <!-- Sidebar menu -->
    <div class="ui vertical inverted sidebar menu">
        <a class="active item">Home</a>
        <a class="item">Work</a>
        <a class="item">Company</a>
        <a class="item">Careers</a>
        <a class="item">Login</a>
        <a class="item">Sign up</a>
    </div>

    <div class="ui top fixed inverted menu">
        <div class="ui container">
            <a asp-controller="Home" asp-action="Index" class="item">Home</a>
            <a class="item">Schedule</a>
            <a class="active item">Roster</a>
            <div class="right menu">
                <div class="item">
                    <a class="ui primary button">Create account</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Page shell -->
    <div class="pusher">

        @RenderBody()

    </div>

    <!-- View scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>